<div id="register">


  <h2>Anmeldung</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email-Adresse' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Passwort' %>
    </div>

    <div class="actions field">
      <%= f.submit "Anmelden", :id => 'submit' %>
    </div>
  <% end %>
</div>

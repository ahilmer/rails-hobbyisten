<div id="register">


  <h2>Anmeldung</h2>

  <div class="register-container">
    <div class="register-textcontainer">
      <p><% flash.each do |key, value| %>
        <span class="flash <%= key %>"><%= value %></span>
      <% end %>
      </p>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email-Adresse', :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Passwort', :class => 'form-control' %>
      </div>

      <div class="actions field">
        <%= f.submit "Anmelden", :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
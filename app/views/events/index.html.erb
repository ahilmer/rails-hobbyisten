
<div class="eventscontrol">
  <div class="eventscontrol-container">
    <div class="eventcheckbox">
      <%= check_box_tag(:myevents_check, 'myevents_flag', true) %>
      <%= label_tag(:myevents_check, "Eigene Veranstaltungen") %>
      <%= check_box_tag(:otherevents_check, 'otherevents_flag', true) %>
      <%= label_tag(:otherevents_check, "Fremede Veranstaltungen") %>
    </div>
    <div class="sortoption-container">
      Hier werden die Sortieroptionen eingef√ºgt
    </div>
    <%= link_to image_tag("default/add.JPG", size: "50"), new_event_path, :class => 'default-button' %>
  </div>
</div>
<div class="eventlist-container">
  <% @events.each do |event| %>
    <div class="event-container">

      <span class="event-picture"></span>
      <div class="eventcontent-container">
        <div class="eventtitle"></div>
        <div class="eventinfo"></div>
        <div class="eventdescription"></div>
      </div>
    </div>
  <% end %>
</div>

